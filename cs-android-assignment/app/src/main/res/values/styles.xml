<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleTextMedium" parent="StyleText">
        <item name="android:textSize">@dimen/font_size_text_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextSmall" parent="StyleText">
        <item name="android:textSize">@dimen/font_size_text_small</item>
    </style>

    <style name="StyleText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
